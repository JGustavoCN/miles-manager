{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Rodar API (Miles.WebApp)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/Miles.WebApp/bin/Debug/net9.0/Miles.WebApp.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Miles.WebApp",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
