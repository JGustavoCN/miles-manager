@page "/not-found"
@using Miles.WebApp.Components.Layout
@layout MainLayout

<PageTitle>Página não encontrada - Miles Manager</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8">
    <MudPaper Elevation="3" Class="pa-8 text-center">
        <MudIcon Icon="@Icons.Material.Filled.SearchOff" Size="Size.Large" Color="Color.Error" Style="font-size: 5rem;" />

        <MudText Typo="Typo.h3" GutterBottom="true" Class="mt-4">
            404 - Página Não Encontrada
        </MudText>

        <MudText Typo="Typo.body1" Class="mb-4">
            Desculpe, a página que você está procurando não existe.
        </MudText>

        <MudDivider Class="my-4" />

        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   Href="/"
                   StartIcon="@Icons.Material.Filled.Home"
                   Size="Size.Large">
            Voltar para a Página Inicial
        </MudButton>
    </MudPaper>
</MudContainer>
