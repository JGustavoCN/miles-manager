@page "/cadastro"
@layout PublicLayout
@using Microsoft.AspNetCore.Authorization
@using Miles.Application.DTOs
@using Miles.Application.Services
@using Miles.Core.Interfaces
@using Miles.WebApp.Auth
@attribute [AllowAnonymous]
@inject AuthenticationStateProvider AuthStateProvider
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Cadastro - Miles</PageTitle>

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="row w-100">
        <div class="col-md-6 col-lg-4 mx-auto">
            <div class="card shadow">
                <div class="card-body p-4">
                    <div class="d-flex flex-column align-center mb-4">
                        <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Color="Color.Primary" Style="font-size: 4rem;"
                            Class="mb-2" />
                        <div class="d-flex align-center justify-center">
                            <MudIcon Icon="@Icons.Material.Filled.FlightTakeoff" Size="Size.Large" Class="mr-2" />
                            <MudText Typo="Typo.h2" Class="fw-bold">
                                Miles Manager
                            </MudText>
                        </div>
                        <MudText Typo="Typo.body1" Class="mt-2">
                            Crie sua conta para gerenciar seus pontos
                        </MudText>
                    </div>

                    <EditForm Model="@cadastroModel" OnValidSubmit="HandleCadastro">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="nome" class="form-label">Nome Completo</label>
                            <InputText id="nome" class="form-control" @bind-Value="cadastroModel.Nome"
                                placeholder="Seu Nome" />
                            <ValidationMessage For="@(() => cadastroModel.Nome)" />
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">E-mail</label>
                            <InputText id="email" class="form-control" @bind-Value="cadastroModel.Email"
                                placeholder="seu@email.com" />
                            <ValidationMessage For="@(() => cadastroModel.Email)" />
                        </div>

                        <div class="mb-3">
                            <label for="senha" class="form-label">Senha</label>
                            <InputText id="senha" type="password" class="form-control" @bind-Value="cadastroModel.Senha"
                                placeholder="********" />
                            <ValidationMessage For="@(() => cadastroModel.Senha)" />
                        </div>

                        <div class="mb-3">
                            <label for="confirmarSenha" class="form-label">Confirmar Senha</label>
                            <InputText id="confirmarSenha" type="password" class="form-control"
                                @bind-Value="cadastroModel.ConfirmarSenha" placeholder="********" />
                            <ValidationMessage For="@(() => cadastroModel.ConfirmarSenha)" />
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary" disabled="@loading">
                                @if (loading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"
                                        aria-hidden="true"></span>
                                    <span>Criando conta...</span>
                                }
                                else
                                {
                                    <span>Cadastrar</span>
                                }
                            </button>
                        </div>
                    </EditForm>

                    <div class="text-center mt-3">
                        <small>
                            Já tem conta? <a href="/login">Faça login</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CadastroInputDTO cadastroModel = new();
    private bool loading = false;

    private async Task HandleCadastro()
    {
        loading = true;
        try
        {
            // 1. Tenta Registrar (Agora Async)
            var resultadoRegistro = await AuthService.RegistrarUsuarioAsync(cadastroModel);

            if (resultadoRegistro.Sucesso)
            {
                Log.Information("Usuário {Email} cadastrado com sucesso", resultadoRegistro.Email);
                Snackbar.Add("Conta criada com sucesso! Entrando...", Severity.Success);

                // 2. Prepara o objeto de Login (DTO)
                var loginInput = new LoginInputDTO
                {
                    Email = cadastroModel.Email,
                    Senha = cadastroModel.Senha
                };

                // 3. Tenta realizar o Login (Agora Async e Await)
                var resultadoLogin = await AuthService.RealizarLoginAsync(loginInput);

                if (resultadoLogin.Sucesso && resultadoLogin.UsuarioId.HasValue)
                {
                    // 4. Atualiza o AuthenticationStateProvider
                    var authProvider = (CustomAuthenticationStateProvider)AuthStateProvider;

                    await authProvider.MarkUserAsAuthenticatedAsync(
                    resultadoLogin.UsuarioId.Value,
                    resultadoLogin.Nome ?? "",
                    resultadoLogin.Email ?? ""
                    );

                    // 5. Redireciona
                    NavigationManager.NavigateTo("/dashboard");
                }
                else
                {
                    Snackbar.Add("Cadastro realizado, mas falha ao logar automaticamente.", Severity.Warning);
                    NavigationManager.NavigateTo("/login");
                }
            }
            else
            {
                Snackbar.Add(resultadoRegistro.MensagemErro ?? "Erro desconhecido ao realizar cadastro.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Log.Error(ex, "Erro ao tentar realizar cadastro");
            Snackbar.Add("Ocorreu um erro inesperado ao tentar realizar o cadastro.", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }
}
