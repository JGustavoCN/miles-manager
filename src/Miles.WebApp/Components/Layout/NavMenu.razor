<div class="nav-menu-custom">
    <div class="nav-header">
        <MudIcon Icon="@Icons.Material.Filled.Dashboard" Color="Color.Primary" Size="Size.Large" Class="mr-3" />
        <div>
            <MudText Typo="Typo.subtitle1" Class="nav-title">Navegação</MudText>
